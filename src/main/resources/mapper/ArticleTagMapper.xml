<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pro01.myblog.mapper.ArticleTagMapper">

    <insert id="insertBatch">
        INSERT INTO article_tags (article_id, tag_id, create_time)
        VALUES
        <foreach collection="tagIds" item="tid" separator=",">
            (#{articleId}, #{tid}, NOW())
        </foreach>
        <!-- 防重复（极端情况下同名被传两次） -->
        ON DUPLICATE KEY UPDATE create_time = VALUES(create_time)
    </insert>

    <!-- 删除文章的所有标签关系 -->
    <delete id="deleteByArticleId" parameterType="long">
        DELETE FROM article_tags
        WHERE article_id = #{articleId}
    </delete>

    <!-- 批量插入标签关系（幂等） -->
    <insert id="insertBatchForUpdate">
        INSERT INTO article_tags (article_id, tag_id, create_time)
        VALUES
        <foreach collection="tagIds" item="tid" separator=",">
            (#{articleId}, #{tid}, NOW())
        </foreach>
        ON DUPLICATE KEY UPDATE create_time = VALUES(create_time)
    </insert>
</mapper>