<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pro01.myblog.mapper.TagMapper">

    <!-- 只取系统内置标签，防止脏数据 -->
    <select id="findTagIdsByNames" parameterType="list" resultType="long">
        SELECT id
        FROM tags
        WHERE is_system = TRUE
        AND name IN
        <foreach collection="names" item="n" open="(" separator="," close=")">
            #{n}
        </foreach>
    </select>

    <!-- 批量根据标签名查询系统标签ID -->
    <select id="findSystemTagIdsByNames" parameterType="list" resultType="long">
        SELECT id
        FROM tags
        WHERE is_system = TRUE
        <if test="list != null and list.size > 0">
            AND name IN
            <foreach collection="list" item="name" open="(" separator="," close=")">
                #{name}
            </foreach>
        </if>
    </select>

    <select id="findNamesByArticleId" parameterType="long" resultType="string">
        SELECT t.name
        FROM article_tags at
                 JOIN tags t ON t.id = at.tag_id
        WHERE at.article_id = #{articleId}
        ORDER BY t.name
    </select>

    <!-- 过滤出系统内置标签的“名称列表” -->
    <!-- 过滤出系统内置标签的“名称列表” -->
    <select id="selectValidSystemNames" parameterType="list" resultType="string">
        SELECT name
        FROM tags
        WHERE is_system = TRUE
        AND name IN
        <foreach collection="list" item="n" open="(" separator="," close=")">
            #{n}
        </foreach>
    </select>

</mapper>